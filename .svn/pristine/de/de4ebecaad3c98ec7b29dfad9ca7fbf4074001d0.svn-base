<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/index"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#CFA77F"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="1" />

        <RelativeLayout
            android:id="@+id/grade_bg"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/index"
            android:background="@mipmap/rankingbg">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxWidth="120dp"
                android:paddingLeft="12dp"
                android:text="安满  ANMUM"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ratio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="12dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="73.91" />
        </RelativeLayout>

        <View
            android:id="@+id/space"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/grade_bg"
            android:background="@color/transparent" />

        <ImageView
            android:id="@+id/crown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/space"
            android:layout_toLeftOf="@+id/space"
            android:src="@drawable/gold_crown" />
    </RelativeLayout>

</RelativeLayout>