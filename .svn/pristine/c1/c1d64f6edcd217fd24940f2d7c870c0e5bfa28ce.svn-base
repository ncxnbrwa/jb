<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppBaseTheme.Toolbar"
        android:background="@color/white"
        app:navigationIcon="@mipmap/btn_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextAppearance="@style/toolbar_title_text">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="重置密码"
            android:textColor="@color/text_color1"
            android:textSize="15sp" />
    </android.support.v7.widget.Toolbar>

    <include layout="@layout/cut_off_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/login_hint"
                android:layout_marginTop="16dp"
                android:text="新密码" />

            <TextView
                android:id="@+id/new_psw_error"
                style="@style/login_error"
                android:layout_marginTop="16dp"
                tools:text="新密码不能为空" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_new_psw"
            style="@style/login_eidttext"
            android:hint="密码为6-12位数字或字母"
            android:inputType="textPassword" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/login_hint"
                android:layout_marginTop="16dp"
                android:text="确认密码" />

            <TextView
                android:id="@+id/confirm_psw_error"
                style="@style/login_error"
                android:layout_marginTop="16dp"
                tools:text="确认密码不能为空" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_confirm_psw"
            style="@style/login_eidttext"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/last_step_btn"
                android:text="上 一 步"
                android:textColor="@color/text_color3"
                android:textSize="14sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_enable_bg"
                android:text="确 定"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>