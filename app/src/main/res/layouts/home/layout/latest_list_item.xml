<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/latest_item_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/latest_item_width"
            android:layout_height="@dimen/latest_item_width"
            android:layout_centerVertical="true"
            tools:src="@mipmap/test_goods" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="140dp"
                android:textColor="@color/text_color1"
                android:textSize="14sp"
                tools:text="孕妇奶粉" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color3"
                android:textSize="13sp"
                tools:text="2018-03-29" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/rank_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/bg_rank"
        android:gravity="center"
        android:text="品牌榜"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>