<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/brand_goods_width"
        android:layout_height="@dimen/brand_goods_width"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/test_goods2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxWidth="@dimen/brand_goods_width"
        android:text="Pure Color Love Lipstick 恋爱唇膏"
        android:textColor="@color/text_color1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxWidth="@dimen/brand_goods_width"
        android:text="￥230.00"
        android:textColor="@color/text_color2"
        android:textSize="13sp" />
</LinearLayout>