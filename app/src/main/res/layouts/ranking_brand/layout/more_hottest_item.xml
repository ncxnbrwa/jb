<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/more_rankingbg_color1">

    <FrameLayout
        android:id="@+id/index_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/index_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hotlist_index" />

        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="01" />
    </FrameLayout>

    <TextView
        android:id="@+id/ranking_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/index_layout"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="180dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="2018新春中国坚果品牌排行榜" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ranking_type"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/ranking_type"
        android:text="品牌榜"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>