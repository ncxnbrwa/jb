<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/three_level_item_img"
    android:layout_height="wrap_content"
    android:background="@drawable/square_bg_2dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_level_item_img"
            android:paddingTop="-2dp"
            tools:src="@mipmap/test_brand" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxWidth="@dimen/three_level_item_img"
            android:padding="4dp"
            android:textColor="@color/text_color5"
            android:textSize="12sp"
            tools:text="波轮洗衣机" />
    </LinearLayout>
</FrameLayout>